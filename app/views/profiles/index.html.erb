<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <p id="notice"><%= notice %></p>

      <h1>Profiles</h1>

      <div>
        <%= link_to 'Download as Spreadsheet', profiles_path(:format => :csv), class: 'btn btn-primary' %>
      </div>

      <table id="profile_table" class="table table-striped">
        <thead>
          <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Suffix</th>
            <th>Display name</th>
            <th>State</th>
            <th>Years of membership</th>
            <th>Photo</th>
            <th>In memoriam</th>
            <th>Next Gen</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @profiles.each do |profile| %>
          <tr>
            <td><%= profile.first_name %></td>
            <td><%= profile.last_name %></td>
            <td><%= profile.suffix %>
            <td><%= profile.display_name %></td>
            <td><%= profile.state %></td>
            <td><%= profile.years_of_membership %></td>
            <td><%= profile.photo %></td>
            <td><%= profile.in_memoriam %></td>
            <td><%= profile.next_gen %></td>
            <td><%= link_to 'Show', profile %></td>
            <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
            <td><%= link_to 'Delete', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Profiles</h1>
      <div>
        <%= link_to 'Download as Spreadsheet', profiles_path(:format => :csv), class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div id="profiles">
    <table class="table table-striped">
      <thead>
        <tr>
          <th data-filter-for="member_id">MemberId</th>
          <th data-filter-for="first_name">First</th>
          <th data-filter-for="last_name">Last</th>
          <th data-filter-for="suffix">Suffix</th>
          <th data-filter-for="display_name">Display Name</th>
          <th data-filter-for="state">State</th>
          <th data-filter-for="years_of_membership">Years</th>
          <th data-filter-for="photo">Photo</th>
          <th data-filter-for="in_memoriam">In Memorium</th>
          <th data-filter-for="next_gen">Next Gen</th>
          <th data-filter-for="years_for_next_gen">Year for Next Gen</th>
          <th data-filter-for="next_gen_presidents_club">President's</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody id="profile_list">
        <tr>
          <td>
            Loading profiles..............
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<script type="text/javascript">
  $(document).on('turbolinks:load', function(){

    Profiles.init();
  });
</script>
